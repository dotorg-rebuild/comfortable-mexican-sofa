.page-header
  = link_to t('.new_link'), new_comfy_admin_cms_site_page_path(@site), :class => 'btn btn-default pull-right'
  %h2= t('.title')

- content_for :right_column do
  = render 'comfy/admin/cms/sites/mirrors'

= render 'comfy/admin/cms/partials/pages_before'

= render :partial => 'comfy/admin/cms/categories/index', :object => 'Comfy::Cms::Page'

.search
  = search_form_for(@q, url: 'pages') do |f|
    = f.search_field :label_cont, placeholder: 'Label'
    = f.submit
    = link_to "Clear Search", request.path, class:"cancel-button"

%ul.list.sortable
  = render :partial => 'index_branch', :collection => @pages

= render 'comfy/admin/cms/partials/pages_after'
